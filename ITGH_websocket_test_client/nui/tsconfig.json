{
  "compilerOptions": {
    "outDir": "./js",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es2015",
    "lib": ["dom", "es2015", "es2016", "es2017"],
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["ts/**/*.ts"],
  "exclude": ["node_modules"]
}
